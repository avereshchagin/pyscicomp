<idea-plugin version="2">
  <id>com.jetbrains.pyscicomp</id>
  <name>Python Scientific Compuation</name>
  <description>Support for Numpy library</description>
  <version>1.0</version>
  <depends>com.intellij.modules.python</depends>

  <resource-bundle>com.jetbrains.python.PyBundle</resource-bundle>

  <application-components>
  </application-components>

  <project-components>
  </project-components>

  <actions>
    <action id="pscAction" class="com.jetbrains.pyscicomp.TestAction" text="PSC Test Action">
      <add-to-group group-id="ToolsMenu" anchor="last"/>
    </action>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <applicationService serviceInterface="com.jetbrains.pyscicomp.codeInsight.NumpyNamesService"
                        serviceImplementation="com.jetbrains.pyscicomp.codeInsight.NumpyNamesService"/>
    <localInspection language="Python" shortName="NumpyUnknownReturnTypeInspection" displayName="Unknown Return Type Inspection" groupKey="INSP.GROUP.python"
                     enabledByDefault="true" level="WARNING"
                     implementationClass="com.jetbrains.pyscicomp.codeInsight.NumpyUnknownReturnTypeInspection"/>
    <lang.documentationProvider language="Python" order="first" implementationClass="com.jetbrains.pyscicomp.documentation.NumpyDocumentationProvider"/>
  </extensions>

  <extensions defaultExtensionNs="Pythonid">
    <typeProvider implementation="com.jetbrains.pyscicomp.codeInsight.NumpyTypeProvider"/>
  </extensions>


</idea-plugin>
